void setup(){
  //Pinos de entrada
  pinMode(BLpin, OUTPUT);
  pinMode(sensorPin, INPUT);
  //Inicia com o Led do LCD ligado
  digitalWrite(BLpin, LOW);
  display.begin();
  //Contraste do LCD
  display.setContrast(35);
  //Limpa a tela
  display.clearDisplay();
  //Imprime no displau a imagem 3 e espera 3 segundos para iniciar o loop
  display.drawBitmap(0,0,img3,84,84,BLACK);
  display.display();
  delay(3000);
  
  Serial.begin(9600);
  
}

